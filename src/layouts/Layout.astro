---
import WebNavbar from "src/components/astro/navigations/WebNavbar.astro";
import "src/styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/submarine.png" />
        <meta name="generator" content={Astro.generator} />
        <title>SPK Mariana Trench</title>
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        <script is:inline src="//unpkg.com/alpinejs" defer></script>
    </head>
    <body class="bg-base-color2">
        <WebNavbar />
        <slot />
        <script src="https://unpkg.com/aos@next/dist/aos.js" is:inline></script>
        <script is:inline>
            AOS.init({
                offset: 120, 
                delay: 0,
                duration: 1000, 
                easing: "ease",
            });
        </script>
    </body>
</html>

<style>
    html,
    body {
        font-family: "Montserrat";
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
        scroll-behavior: smooth;
    }
</style>
