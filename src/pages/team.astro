---
import TeamAvatar from 'src/components/astro/composables/TeamAvatar.astro';
import Layout from '../layouts/Layout.astro';
import type { KelompokInterface } from 'src/models/KelompokInterface';
import WaveBackground from 'src/components/astro/composables/WaveBackground.astro';
import TooltipElement from 'src/components/vue/composables/TooltipElement.vue';
const kelompok : KelompokInterface[] = [
	{
		name: "Fathur Syah",
		npm: "065122057",
		kelas: "B",
		jobdesk: "Web & DSS Model",
		image: "/jojo.png",
		tooltip: "*Menacing . . .*"
	},
	{
		name: "Helena Octaviana",
		npm: "065122005",
		kelas: "A",
		jobdesk: "UI/UX & DSS Model",
		image: "/helen.jpeg",
		tooltip: "Love what you do!"
	},
	{
		name: "Riri Handini",
		npm: "065122121",
		kelas: "E",
		jobdesk: "UI/UX & DSS Model",
		image: "/riri.jpeg",
		tooltip: "Nothing gained by standing still."
	},
]

Astro.response.headers.set("Cache-Control", "public, max-age=3600, s-maxage=3600");
---

<title>Our Team</title>

<Layout>
	<WaveBackground />
	<main class="min-h-screen xl:h-screen overflow-hidden bg-gradient-to-b from-base-color to-blue-950 xl:p-24 p-6 text-gray-50">
		<section class="border-gray-400 border h-full rounded-lg p-8 flex flex-col justify-center gap-12 md:gap-20 bg-black/50 overflow-hidden relative mt-12 xl:mt-0" data-aos="zoom-out">
			<h2 class="text-center text-2xl font-semibold" data-aos="fade-down" data-aos-duration="600">Our Team</h2>
			<div class="w-full flex items-center gap-10 flex-wrap md:justify-evenly" >
				{
					kelompok.map(item => (
						<TooltipElement client:idle text={item.tooltip!}>
							<TeamAvatar {...item} />
						</TooltipElement>
					))
				}
			</div>
		</section>
	</main>
</Layout>