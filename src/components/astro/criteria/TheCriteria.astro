---
import CriteriaCard from "../composables/CriteriaCard.astro";

const criterias = [
    {title: "Compressive Strength", info: "Kemampuan material untuk menahan gaya tekan sebelum mengalami kerusakan."},
    {title: "Corrosion Resistance", info: "Seberapa baik material bertahan dari kerusakan akibat reaksi kimia dengan lingkungan (khususnya air laut asin)."},
    {title: "Density", info: "Massa per satuan volume material (biasanya dalam satuan g/cm³ atau kg/m³)."},
    {title: "Cost", info: "Biaya produksi, pengolahan, dan penggunaan material tersebut."},
    {title: "Fabricability", info: "Seberapa mudah material dibentuk, dilas, atau dirakit menjadi struktur kapal selam."},

];
---

<section class="bg-black/80 xl:h-screen grid place-items-center bg-[url('https://i.pinimg.com/originals/3c/e6/95/3ce69531311986a8a78f1e093f53df3d.gif')] bg-no-repeat bg-cover bg-blend-multiply">
    <div class="container px-8 py-10 mx-auto backdrop-blur-sm">
        <div class="flex flex-col justify-center  xl:gap-10 gap-6">
            <div>
                <h1 class="text-2xl font-semibold text-gray-800 capitalize lg:text-3xl dark:text-white" data-aos="fade-right" >five criteria</h1>
                <div>
                    <span class="inline-block w-40 h-1 bg-blue-500 rounded-full"></span>
                    <span class="inline-block w-3 h-1 ml-1 bg-blue-500 rounded-full"></span>
                    <span class="inline-block w-1 h-1 ml-1 bg-blue-500 rounded-full"></span>
                </div>
            </div>
            <div class="w-full grid xl:grid-cols-2 gap-8 xl:px-10" >
                {
                    criterias.map((item) => (
                        <CriteriaCard {...item} />           
                    ))
                }
            </div>
        </div>
</section>