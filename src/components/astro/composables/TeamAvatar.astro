---
const { name, npm, kelas, jobdesk, image } = Astro.props;
---

<div class="w-full max-w-xs text-center">
    <img class="object-cover object-[0%_10%] w-80 h-48 mx-auto rounded-lg pointer-events-none" src={ image || "https://images.unsplash.com/photo-1493863641943-9b68992a8d07?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=739&q=80" } alt="avatar" />

    <div class="mt-2">
        <h3 class="md:text-lg font-medium text-gray-700 dark:text-gray-200">{name}</h3>
        <p class="font-light text-gray-400 text-sm">{npm} ({kelas})</p>
        <span class="mt-1 font-medium text-gray-600 dark:text-gray-300 text-sm">{jobdesk}</span>
    </div>
</div>